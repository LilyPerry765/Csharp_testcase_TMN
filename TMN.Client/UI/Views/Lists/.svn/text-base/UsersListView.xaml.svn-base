<v:ItemsListBase x:Class="TMN.Views.Lists.UserListView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:uc="clr-namespace:TMN.UserControls"
                     xmlns:conv="clr-namespace:TMN.Converters;assembly=TMN.Converters"
                     xmlns:v="clr-namespace:TMN.Views.Lists">
    <v:ItemsListBase.ListView>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="نام کاربری"
                                    DisplayMemberBinding="{Binding UserName}"
                                    Width="100" />
                    <GridViewColumn Header="نام  حقيقی"
                                    DisplayMemberBinding="{Binding FullName}"
                                    Width="100" />
                    <GridViewColumn Header="شيفت"
                                    DisplayMemberBinding="{Binding Shift}"
                                    Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </v:ItemsListBase.ListView>
</v:ItemsListBase>
