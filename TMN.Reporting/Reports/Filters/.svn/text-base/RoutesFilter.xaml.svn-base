<UserControl x:Class="TMN.Reports.Filters.RoutesFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="label1"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               Grid.Column="0">نام مسير</Label>
        <TextBox x:Name="txtRouteName"
                 Margin="3"
                 Grid.Row="0"
                 Grid.Column="1" />
        <Label Grid.Column="2"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               x:Name="label2">Tgno</Label>
        <TextBox x:Name="txtInternalRouteName"
                 Margin="3"
                 Grid.Row="0"
                 Grid.Column="3" />
        <Label x:Name="label3"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               Grid.Column="4">OPC</Label>
        <TextBox x:Name="txtOPC"
                 Margin="3"
                 Grid.Row="0"
                 Grid.Column="5" />
        <Label x:Name="label4"
               HorizontalContentAlignment="Right"
               Grid.Column="6"
               Grid.Row="0">DPC</Label>
        <TextBox x:Name="txtDPC"
                 Margin="3"
                 Grid.Row="0"
                 Grid.Column="7" />
    </Grid>
</UserControl>
