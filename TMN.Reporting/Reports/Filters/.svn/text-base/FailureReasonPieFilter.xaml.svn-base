<UserControl x:Class="TMN.Reports.Filters.FailureReasonPieFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:r="clr-namespace:Enterprise.Wpf;assembly=Enterprise.Wpf"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
 
        <Label x:Name="label4"
               HorizontalContentAlignment="Right"
               Grid.Column="0"
               Grid.Row="0">مسير</Label>
        <ComboBox x:Name="RouteComboBox"
                  DisplayMemberPath="RouteName"
                  MinWidth="70"
                  Margin="3"
                  Grid.Row="0"
                  Grid.Column="1" />
        <Label Grid.Column="2"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               x:Name="label2">از تاريخ</Label>
        <r:PersianDateBox x:Name="DateFromDateBox"
                          Margin="3"
                          Grid.Row="0"
                          Grid.Column="3" />
        <Label x:Name="label3"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               Grid.Column="4">تا تاريخ</Label>
        <r:PersianDateBox x:Name="DateToDateBox"
                          Margin="3"
                          Grid.Row="0"
                          Grid.Column="5" />

    </Grid>
</UserControl>
