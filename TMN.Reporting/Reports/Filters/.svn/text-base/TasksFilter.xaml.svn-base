<UserControl x:Class="TMN.Reports.Filters.TasksFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:r="clr-namespace:Enterprise.Wpf;assembly=Enterprise.Wpf"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="label1"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               Grid.Column="0">شيفت</Label>
        <ComboBox x:Name="ShiftCombo"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Value"
                  Margin="3"
                  MinWidth="70"
                  Grid.Row="0"
                  Grid.Column="1" />
        <Label x:Name="label4"
               HorizontalContentAlignment="Right"
               Grid.Column="2"
               Grid.Row="0">عنوان تست</Label>
        <ComboBox x:Name="TitleCombo"
                  KeyDown="TitleCombo_KeyDown"
                  DisplayMemberPath="Name"
                  MinWidth="70"
                  Margin="3"
                  Grid.Row="0"
                  Grid.Column="3" />
        <Label Grid.Column="4"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               x:Name="label2">از تاريخ</Label>
        <r:PersianDateBox x:Name="DateFromDateBox"
                          Margin="3"
                          Grid.Row="0"
                          Grid.Column="5" />
        <Label x:Name="label3"
               HorizontalContentAlignment="Right"
               Grid.Row="0"
               Grid.Column="6">تا تاريخ</Label>
        <r:PersianDateBox x:Name="DateToDateBox"
                          Margin="3"
                          Grid.Row="0"
                          Grid.Column="7" />

    </Grid>
</UserControl>
