<Window x:Class="TMN.UI.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:TMN.Assets;assembly=TMN.Common"
        Title="ورود به سيستم"
        Activated="Window_Activated"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource lightBlueShadow}"
        ResizeMode="NoResize"
        Height="211"
        FontFamily="Tahoma"
        FlowDirection="RightToLeft"
        Width="353" Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="Auto"
                                   MinWidth="71" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition  Width="100" />
            </Grid.ColumnDefinitions>
            <Image  Grid.Column="2"
                    Source="{a:ImageSource Path=login.png}"
                    Grid.RowSpan="4" />
            <TextBox Height="23"
                     VerticalAlignment="Center"
                     TabIndex="0"
                     Name="txtUsername"
                     Grid.Column="1"
                     Grid.Row="0" />
            <PasswordBox Height="23"
                         Name="txtPassword"
                         VerticalAlignment="Center"
                         Grid.Column="1"
                         Grid.Row="1" />
            <Label Height="28.12"
                   Grid.Row="2"
                   HorizontalContentAlignment="Right"
                   VerticalAlignment="Center">شيفت:</Label>
            <TextBox x:Name="ShiftLabel"
                     Height="23"
                     IsReadOnly="True"
                     Grid.Row="2"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Focusable="False"
                     HorizontalContentAlignment="Left" />
            <Label Name="label2"
                   Height="28.12"
                   Grid.Column="0"
                   Grid.Row="0"
                   HorizontalContentAlignment="Right"
                   VerticalAlignment="Center">نام کاربری:</Label>
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Name="label1"
                   Height="25"
                   HorizontalContentAlignment="Right"
                   VerticalAlignment="Center">کلمه عبور:</Label>
        </Grid>
        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                Name="btnOK"
                IsDefault="True"
                Width="75"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Stretch"
                Height="25"
                Click="btnOK_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="c1"
                                      Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="{Binding ActualWidth, ElementName=c1}" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="{a:ImageSource Path=check.png}" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Center">ورود</TextBlock>
            </Grid>
        </Button>
        <Button Grid.Row="1"
                IsCancel="True"
                Name="btnCancel"
                Margin="85,0,0,0"
                HorizontalAlignment="Left"
                Width="75"
                VerticalAlignment="Top"
                Height="25"
                HorizontalContentAlignment="Stretch"
                Click="btnCancel_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="c2"
                                      Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="{Binding ActualWidth, ElementName=c2}" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="{a:ImageSource Path=cancel.png}" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Center">انصراف</TextBlock>
            </Grid>
        </Button>
    </Grid>
</Window>
