<Window x:Class="TMN.UI.Windows.SetCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:TMN.Assets;assembly=TMN.Common"
        xmlns:ent="clr-namespace:Enterprise.Wpf;assembly=Enterprise.Wpf"
        xmlns:uc="clr-namespace:TMN.UserControls"
        Title="تخصيص کارت"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Tahoma"
        Height="182"
        Width="279"
        Background="{StaticResource lightBlueShadow}"
        FlowDirection="RightToLeft">
    <DockPanel  FlowDirection="RightToLeft"
                LastChildFill="True">
        <Border x:Name="ControlPanel"
                DockPanel.Dock="Bottom"
                Margin="-1,0,-1,-1"
                Height="32"
                BorderBrush="LightBlue"
                BorderThickness="1">
            <Grid>
                <uc:ImageButton  Margin="12,0,0,0"
                                 x:Name="btnOK"
                                 HorizontalAlignment="Left"
                                 Width="75"
                                 Height="23"
                                 VerticalAlignment="Center"
                                 ImageSource="{a:ImageSource Path=check.png}"
                                 IsDefault="True"
                                 Click="btnOK_Click"
                                 Text="تاييد" />
                <uc:ImageButton Text="انصراف"
                                Margin="93,0,0,0"
                                x:Name="btnCancel"
                                Height="23"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="75"
                                ImageSource="{a:ImageSource Path=cancel.png}"
                                IsCancel="True" />
            </Grid>
        </Border>
        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition  Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style   TargetType="Label">
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalAlignment"
                            Value="Right" />
                </Style>
                <Style   TargetType="ComboBox">
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalAlignment"
                            Value="Left" />
                    <Setter Property="Width"
                            Value="100" />
                    <Setter Property="IsEditable"
                            Value="True" />
                </Style>
            </Grid.Resources>
            <Label Grid.Column="0"
                   Grid.Row="0">راک:</Label>
            <Label Grid.Column="0"
                   Grid.Row="1">شلف:</Label>
            <Label Grid.Column="0"
                   Grid.Row="2">کارت:</Label>
            <ComboBox x:Name="RackComboBox"
                      Grid.Column="1"
                      Grid.Row="0"
                      SelectionChanged="RackComboBox_SelectionChanged"
                      DisplayMemberPath="Name"
                      SelectedValuePath="ID" />
            <ComboBox   x:Name="ShelfComboBox"
                        Grid.Column="1"
                        Grid.Row="1"
                        DisplayMemberPath="Name"
                        SelectedValuePath="ID"
                        SelectionChanged="ShelfComboBox_SelectionChanged" />
            <ComboBox  x:Name="CardComboBox"
                       Grid.Column="1"
                       Grid.Row="2"
                       DisplayMemberPath="Name"
                       SelectedValuePath="ID" />
        </Grid>
    </DockPanel>
</Window>
