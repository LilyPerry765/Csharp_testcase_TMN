<Window x:Class="TMN.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        WindowStartupLocation="CenterScreen"
        FontFamily="Tahoma"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neax Alarm Service Settings"
        Height="213"
        Width="382">
    <DockPanel Margin="5"
               FlowDirection="RightToLeft">
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Bottom">
            <Button Margin="3"
                    IsDefault="True"
                    Content="ثبت"
                    Height="23"
                    Name="saveButton"
                    Width="75"
                    Click="saveButton_Click" />
            <Button Margin="3"
                    Content="خروج"
                    IsCancel="True"
                    Height="23"
                    Name="cancelButton"
                    Width="75"
                    Click="cancelButton_Click" />
        </StackPanel>
        <StackPanel Margin="10">
            <Label>مرکز جاری:</Label>
            <ComboBox x:Name="centersCombo"
                      Width="300"
                      HorizontalAlignment="Left"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="ID" />
            <Label>محل فايل اکسس حاوی آلارم ها:</Label>
            <DockPanel Width="300"
                       HorizontalAlignment="Left">
                <Button x:Name="browsButton"
                        DockPanel.Dock="Right"
                        Width="30"
                        Click="browsButton_Click">...</Button>
                <TextBox x:Name="pathTextBox"
                         FlowDirection="LeftToRight" />
            </DockPanel>
        </StackPanel>
    </DockPanel>
</Window>
