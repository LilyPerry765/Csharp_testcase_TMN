<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:a="clr-namespace:TMN.Assets;assembly=TMN.Common"
                    xmlns:r="clr-namespace:Enterprise.Wpf;assembly=Enterprise.Wpf"
                    x:Class="TMN.Themes.Generic">
    <RadialGradientBrush x:Key="lightBlueShadow"
                         RadiusX=".8"
                         RadiusY="1"
                         Center=".5,.5"
                         GradientOrigin=".5,.3">
        <GradientStop Color="White"
                      Offset="-.1" />
        <GradientStop Color="#7EAED2"
                      Offset="1.5" />
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="ToolBarBrush"
                         StartPoint="0,0"
                         EndPoint="0,1">
        <GradientStop Offset="0"
                      Color="White" />
        <GradientStop Offset=".05"
                      Color="#20FFFFFF" />
        <GradientStop Offset="0.9"
                      Color="#9AFFFFFF" />
        <GradientStop Offset="1"
                      Color="Transparent" />
    </LinearGradientBrush>
        <Style x:Key="{x:Static ToolBar.ButtonStyleKey}"
           TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="IsEnabled"
                     Value="false">
                <!--<Setter Property="BitmapEffect">
                    <Setter.Value>
                        <EmbossBitmapEffect Relief=".1" />
                        
                    </Setter.Value>
                </Setter>-->
                <Setter Property="Opacity"
                        Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="HighLighting">
        <Style.Resources>
            <LinearGradientBrush Opacity=".5"
                                 x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                 StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="Blue"
                              Offset="1 " />
            </LinearGradientBrush>
            <LinearGradientBrush Opacity=".5"
                                 x:Key="{x:Static SystemColors.ControlBrushKey}"
                                 StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="DarkGray"
                              Offset="0 " />
            </LinearGradientBrush>
        </Style.Resources>
    </Style>
    <Style TargetType="{x:Type TreeViewItem}"
           BasedOn="{StaticResource HighLighting}" />
    <Style TargetType="{x:Type ListView}"
           BasedOn="{StaticResource HighLighting}">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex"
                                 Value="0">
                            <Setter Property="Background"
                                    Value="#30FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="White"
                                                      Offset="0" />
                                        <GradientStop Color="Wheat"
                                                      Offset=".4" />
                                        <GradientStop Color="#FFFFDA66"
                                                      Offset=".4" />
                                        <GradientStop Color="#FFFFE9A6"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="AlternationCount"
                Value="2" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush Opacity=".5"
                                     StartPoint="1,0"
                                     EndPoint="0,1">
                    <GradientStop Color="White"
                                  Offset="-.1" />
                    <GradientStop Color="Transparent"
                                  Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <RadialGradientBrush x:Key="WaveBrush"
                         Opacity=".6"
                         Center=".2,0.2"
                         SpreadMethod="Reflect">
        <GradientStop Color="#FF9FB8D9"
                      Offset="0.1" />
        <GradientStop Color="#FF6C8CBE"
                      Offset="1.5" />
    </RadialGradientBrush>
    <Style x:Key="LinkLabel"
           TargetType="{x:Type Label}">
        <Setter Property="Margin"
                Value="10,3" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Foreground"
                Value="Blue" />
        <Setter Property="TextBlock.TextWrapping"
                Value="Wrap" />
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver"
                               Value="True" />
                    <Condition Property="IsEnabled"
                               Value="True" />
                </MultiTrigger.Conditions>
                <Setter Property="TextBlock.TextDecorations"
                        Value="Underline" />
            </MultiTrigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="ToolBar">
        <Setter Property="Background"
                Value="{StaticResource ToolBarBrush}" />
    </Style>
    <Style TargetType="Menu">
        <Setter Property="Background"
                Value="{StaticResource ToolBarBrush}" />
        <Setter Property="FontFamily"
                Value="Tahoma" />
    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="FontFamily"
                Value="Tahoma" />
    </Style>
    <Style TargetType="{x:Type r:NumericUpDown}">
        <Setter Property="MinWidth"
                Value="40" />
    </Style>
    <Style TargetType="ComboBox">
        <EventSetter Event="KeyDown"
                     Handler="ComboBox_KeyDown" />
    </Style>
    <Style TargetType="ToolTip">
        <Setter Property="FontFamily"
                Value="Tahoma" />
    </Style>
    <Style TargetType="Label"
           x:Key="HeaderLabel">
        <Setter Property="Height"
                Value="50" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Offset="0"
                                  Color="White" />
                    <!--<GradientStop Offset="2"
                                  Color="LightBlue" />-->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Grid.Row"
                Value="0" />
        <Setter Property="Padding"
                Value="10" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="LightBlue" />
    </Style>
    <RadialGradientBrush x:Key="GlassFilter" Center=".9,.8"
                         RadiusX="2"
                         RadiusY="1.7"
                         GradientOrigin="1.15,1.1">
        <GradientStop Offset="0"
                      Color="#20FFFFFF" />

        <GradientStop Offset=".5"
                      Color="#60FFFFFF" />
        <GradientStop Offset=".5"
                      Color="#80FFFFFF" />
        <GradientStop Offset=".78"
                      Color="#FFFFFFFF" />

    </RadialGradientBrush>
    <!--DataGrid-->
    <!--<Style TargetType="DataGridRow">
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#EAECF5" />
            </Trigger>
        </Style.Triggers>
    </Style>-->
    <Style TargetType="DataGridCell">
        <Style.Triggers>
            <Trigger Property="IsSelected"
                     Value="True">
                <Setter Property="Background"
                        Value="#E0E0E0" />
                <Setter Property="Foreground"
                        Value="Black" />
                <Setter Property="BorderBrush"
                        Value="#E0E0E0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="DataGrid">
        <Setter Property="HorizontalGridLinesBrush"
                Value="#D0D7E5" />
        <Setter Property="VerticalGridLinesBrush"
                Value="#D0D7E5" />
        <Setter Property="AutoGenerateColumns"
                Value="False" />
        <Setter Property="SelectionUnit"
                Value="FullRow" />
        
        <Setter Property="RowHeaderWidth"
                Value="30" />
        <Setter Property="CanUserAddRows"
                Value="True" />
        <Setter Property="CanUserDeleteRows"
                Value="True" />
        <Setter Property="CanUserResizeRows"
                Value="False" />
    </Style>
    <ImageBrush x:Key="backgroundPicture" ImageSource="{a:ImageSource Path=bg2.bmp}" />
</ResourceDictionary >