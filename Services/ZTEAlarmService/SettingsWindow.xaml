<Window x:Class="ZTEAlarmService.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZTE Settings Window" Height="360" Width="382"  FontFamily="Tahoma" >
    
    <DockPanel Margin="5" FlowDirection="RightToLeft" >
        <StackPanel Orientation="Horizontal"  DockPanel.Dock="Bottom">
            <Button x:Name="btnOK" Content="تایید" Margin="3" Width="100" Height="23" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Content="انصراف" Margin="3" Width="100" Height="23" Click="btnCancel_Click" />
        </StackPanel>
        <StackPanel Margin="10" >
            <TextBlock Text="مرکز جاری" Margin="3" />
            <ComboBox x:Name="cmbCenters" Margin="3" />
            <TextBlock Text="IP سرور" Margin="3"/>
            <TextBox x:Name="txtIP" Margin="3"/>
            <TextBlock Text="نوع ارتباط با دیتا بیس" Margin="3"/>
            <ComboBox x:Name="connectionTypeComboBox"   Margin="3" >
                <ComboBoxItem Content="Windows Authentication" x:Name="windowsComboBoxItem" />
                <ComboBoxItem Content="SQL Authentication" x:Name="sqlComboBoxItem" />
            </ComboBox>
            <TextBlock Text="نام کاربری" Margin="3"/>
            <TextBox x:Name="txtUserName" Margin="3"/>
            <TextBlock Text="رمز عبور" Margin="3"/>
            <TextBox x:Name="txtPassword" Margin="3"/>
        </StackPanel>

    </DockPanel>
    
</Window>
