<Window x:Class="TMN.UI.Windows.SetDDFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:TMN.Assets;assembly=TMN.Common"
        xmlns:ent="clr-namespace:Enterprise.Wpf;assembly=Enterprise.Wpf"
        xmlns:uc="clr-namespace:TMN.UserControls"
        Title="DDF"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Tahoma"
        Height="236"
        Width="347"
        Background="{StaticResource lightBlueShadow}">
    <DockPanel  FlowDirection="RightToLeft"
                LastChildFill="True">
        <Border x:Name="ControlPanel"
                DockPanel.Dock="Bottom"
                Margin="-1,0,-1,-1"
                Height="32"
                BorderBrush="LightBlue"
                BorderThickness="1">
            <Grid>
                <uc:ImageButton  Margin="12,0,0,0"
                                 x:Name="btnOK"
                                 HorizontalAlignment="Left"
                                 Width="75"
                                 Height="23"
                                 VerticalAlignment="Center"
                                 ImageSource="{a:ImageSource Path=check.png}"
                                 IsDefault="True"
                                 Click="btnOK_Click"
                                 Text="تاييد" />
                <uc:ImageButton Text="انصراف"
                                Margin="93,0,0,0"
                                x:Name="btnCancel"
                                Height="23"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="75"
                                ImageSource="{a:ImageSource Path=cancel.png}"
                                IsCancel="True" />
            </Grid>
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Focusable="False">
            <Canvas FlowDirection="LeftToRight">
                <ent:NumericUpDown x:Name="BayUpDown"
                                   Height="21"
                                   Canvas.Left="84"
                                   Canvas.Top="32"
                                   Width="40"
                                   ValueChanged="UpDown_ValueChanged"
                                   Minimum="1"
                                   Maximum="100" />
                <ent:NumericUpDown x:Name="PositionUpDown"
                                   ValueChanged="UpDown_ValueChanged"
                                   Canvas.Left="84"
                                   Canvas.Top="86"
                                   Height="21"
                                   Width="40"
                                   Minimum="1"
                                   Maximum="2" />
                <ent:NumericUpDown x:Name="NumberUpDown"
                                   ValueChanged="UpDown_ValueChanged"
                                   Canvas.Left="84"
                                   Canvas.Top="59"
                                   Height="21"
                                   Width="40"
                                   Minimum="1"
                                   Maximum="20" />
                <TextBlock Canvas.Left="29"
                           Canvas.Top="32"
                           Height="21"
                           Name="textBlock1"
                           Width="49"
                           Text="Bay:"
                           HorizontalAlignment="Stretch"
                           TextAlignment="Right" />
                <TextBlock Canvas.Left="29"
                           Canvas.Top="86"
                           Height="21"
                           Name="textBlock2"
                           Text="Position:"
                           Width="49"
                           HorizontalAlignment="Stretch"
                           TextAlignment="Right" />
                <TextBlock Canvas.Left="29"
                           Canvas.Top="59"
                           Height="21"
                           Name="textBlock3"
                           Width="49"
                           Text="Number:"
                           HorizontalAlignment="Stretch"
                           TextAlignment="Right" />
                <TextBox Canvas.Left="148"
                         TextAlignment="Center"
                         ToolTip="متن روی DDF"
                         Canvas.Top="32"
                         Height="75"
                         Name="DescriptionTextBox"
                         Width="117" />
                <TextBlock Canvas.Left="271"
                           Canvas.Top="32"
                           Height="21"
                           
                           Text="توضيح:"
                           TextAlignment="Right"
                           Width="49"
                           FlowDirection="RightToLeft" />
            </Canvas>
        </ScrollViewer>
    </DockPanel>
</Window>
